<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestToken" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="textAppearanceHeadline6">@style/TribeTextView.Title</item>
    </style>

    <style name="TribeTextView.Title" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/size_font_h6</item>
        <item name="android:textColor">@color/color_base_gray_900</item>
        <item name="fontFamily">monospace</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TribeButton.Solid" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/color_button_solid_active</item>
    </style>

    <style name="TribeButton.Soft" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/color_button_soft_active</item>
        <item name="android:textColor">@color/color_base_gray_900</item>
    </style>

</resources>